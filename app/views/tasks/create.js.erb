<% if @task.errors.any? %>
  $(".task-form").html("<%= j render partial: "/tasks/tasks_table" %>");

<% else %>
  
  $(".tasks").prepend("<%= j render partial: "/tasks/tasks_table", locals: {task: @task} %>");
  
  <% @task = Task.new %> 
  
  $(".task-form").html("<%= j render partial: "/tasks/tasks_table" %>");
<% end %>