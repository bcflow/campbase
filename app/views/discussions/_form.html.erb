<script type="text/javascript">
	$(function () {
		$('#datetimepicker2').datetimepicker({
      pickTime: false
    });
	});
</script>


	<h3 class="category-headers">New Discussion</h3>
<div class="form-group">
	<%= form_for [@project, @discussion], remote: true do |f| %>
	<div class="form-inline">
		<%= f.text_area :title, class: "form-control", placeholder: "Title", rows: 1 %>
		<%= f.text_area :description, class: "form-control", placeholder: "Description", rows: 1 %>

		<div class="input-group date form-group" id="datetimepicker2">
			<%= f.text_field :due_date, class: "form-control", placeholder: "Due Date" %>
			<span class="input-group-addon">
			<span class="glyphicon glyphicon-calendar"></span>
			</span>
		</div>

		<%= f.submit class: "btn btn-default" %>
		<% end %>
	</div>
</div>

